<!DOCTYPE html>
<html>
<head>
  <title>SledgeHammer</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header">
	<%= image_tag "logo.png", :width => '60px' %>
	<h1>SledgeHammer!</h1>
</div>
<div id="sidebar">
	<% Course.all.each do |course| %>
		<%= link_to course.title, course %> <br />
	<% end %>
</div>
<div id="content">
	<%= yield %>
</div>

</body>
</html>
